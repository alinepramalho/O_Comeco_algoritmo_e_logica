algoritmo "ValoresPares"
var
   val: vetor[1..7] de inteiro
   i: inteiro
   TotPar: Inteiro
inicio
      TotPar <- 0
      para i <- 1 ate 7 faca
           escreva("Digite o ", i , "o. Valor: ")
           Leia(val[i])
      FimPara
      
      para i <- 1 ate 7 faca
      se (val[i] % 2 = 0) entao
      TotPar <- TotPar + 1
      escreval("Valor PAR na posição ", i)
       FimSe
      FimPara
      escreval("O total de pares foi ", TotPar)
fimalgoritmo

