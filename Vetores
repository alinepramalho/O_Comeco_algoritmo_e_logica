algoritmo "ValoresPares"
var
   val: vetor[1..7] de inteiro
   i: inteiro
   TotPar: Inteiro
inicio
      TotPar <- 0
      para i <- 1 ate 7 faca
           escreva("Digite o ", i , "o. Valor: ")
           Leia(val[i])
           se (val[i] % 2 = 0) entao
              TotPar <- TotPar + 1
              FimSe
      FimPara
      escreval("O total de pares foi ", TotPar)
      para i <- 1 ate 7 faca
      se (val[i] % 2 = 0) entao
      escreval("Valor par na posição ", i)
      FimSe
      FimPara
fimalgoritmo
